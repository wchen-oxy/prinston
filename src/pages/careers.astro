<script>
  const ids = [
    "Legal",
    "Business Development",
    "Human Resources",
    "Research",
    "Accounting",
  ];
  const buttons = ids.map((id) => {
    return { id, button: document.getElementById(id) };
  });
  buttons.forEach((object) => {
    object.button.addEventListener("click", (element) => {
      console.log("click");
      const innerDiv = document.getElementById(object.id + "-contents");
      const plus = document.getElementById(object.id + "-plus");
      const minus = document.getElementById(object.id + "-minus");
      if (innerDiv.style.display === "none" || innerDiv.style.display === "") {
        innerDiv.style.display = "flex";
        plus.style.display = "none";
        minus.style.display = "inline";
      } else {
        innerDiv.style.display = "none";
        plus.style.display = "inline";
        minus.style.display = "none";
      }
    });
  });
