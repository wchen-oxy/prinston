    <p>To apply, please send your resume to hr@prinstonpharm.com</p>
  </CenteredMainLayout>
  <Spacer />
  <Spacer />
  <Footer />
</Layout>
<style>
  h1 {
    font-size: 34px;
    font-weight: 400;
  }
  h2 {
    margin-bottom: 0;
  }
  p {
    margin-top: 0;
  }
  .content {
    max-width: 1026px;
