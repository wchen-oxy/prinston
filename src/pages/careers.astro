import CareerTab from "../components/careerTab.astro";
import CareerTab2 from "../components/careerTab2.astro";
import Spacer from "../components/spacer.astro";
import CenteredMainLayout from "../layouts/CenteredMainLayout.astro";
import Layout from "../layouts/Layout.astro";

const desc = `
 Prepare correspondence, reports, presentations, and other materials.\
\nPerform legal research.\
\nOrganize and analyze information and data.\
\nReview and monitor new and updated laws and regulations in relevant fields.\
\nAssist with reviewing, drafting and revising various contracts, including CDA, supply collaboration agreement, etc.\
\nMaintain procedures, forms, and legal policy documents.\
\nAssist with litigation and dispute resolution.\
\nManage Intellectual property portfolios.\
\nCoordinate matters with Human Resources.\
\nA corporate paralegal at a pharmaceutical manufacturer.\
\nIn-house corporate legal support experience in both public and private company settings.\
\nExtensive knowledge of corporate governance, intellectual property, employment litigation and Human Resources related law.\
\nPrepares both material contracts and routine business agreements in all aspects of the business (e.g. MSA, SOWs, NDAs, CDAs, etc.)\
\nOther duties may be assigned.\
`;

const qualifications = `B.A Degree.\
\nPrior corporate paralegal experience preferred.\
\nPrior experience in the pharmaceutical industry preferred.\
\nStrong organizational, customer service, and project management skills.\
\nStrong work ethic, positive attitude, and professional demeanor.\
\nAbility to work independently and as part of a team.\
\nExcellent verbal and written communication skills.\
\nMust be eligible to work in the U.S.\
`;

const benefits = `401(k)\
\nDental insurance\
\nFree parking\
\nHealth insurance\
\nPaid sick time\
\nPaid time off\
\nVision insurance\
`;
---

<Layout title="Careers">
  <Header />
  <PageHeader section="Careers" title="We're Hiring!" />

  <CenteredMainLayout>
    <img id="image-content" src="/prinston/our-coworkers-c.jpg" />
    <Spacer />
    <div class="content">
      <h1>Join Our Team and Transform Healthcare</h1>
      <p>
        At Prinston Pharmaceutical, we are dedicated to pioneering breakthroughs
        that improve and save lives. Our mission is to innovate and deliver
        high-quality, life-changing treatments to patients around the world.
        Here's why you should consider joining our team:
      </p>

      <h2>Innovative Environment</h2>
      <p>
        We foster a culture of innovation where your ideas can thrive. Our
        cutting-edge research and development facilities are equipped with the
        latest technology, enabling you to push the boundaries of science and
        medicine.
      </p>

      <h2>Collaborative Culture</h2>
      <p>
        Collaboration is at the heart of everything we do. You'll work alongside
        some of the brightest minds in the industry, sharing knowledge and
        expertise to achieve common goals. Together, we can make a real
        difference in patients' lives.
      </p>

      <h2>Career Growth and Development</h2>
      <p>
        Your professional growth is important to us. We offer a variety of
        training programs, mentorship opportunities, and career development
        resources to help you reach your full potential. Whether you're just
        starting out or looking to advance your career, we provide the support
        you need to succeed.
      </p>

      <h2>Commitment to Diversity and Inclusion</h2>
      <p>
        We believe that diverse perspectives drive innovation. Our inclusive
        workplace welcomes individuals from all backgrounds, ensuring that
        everyone feels valued and respected. We are committed to creating an
        environment where you can bring your whole self to work.
      </p>

      <h2>Comprehensive Benefits</h2>
      <p>
        We offer a competitive benefits package designed to support your health,
        well-being, and financial security. From comprehensive health insurance
        to retirement plans and wellness programs, we've got you covered.
      </p>

      <h2>Making a Difference</h2>
      <p>
        When you join Prinston Pharmaceutical, you become part of a team that is
        dedicated to making a positive impact on the world. Our work directly
        contributes to improving the quality of life for patients and their
        families.
      </p>

      <h2>Join Us Today</h2>
      <p>
        If you're passionate about making a difference and ready to take your
        career to the next level, we invite you to explore our current job
        openings and join our team. Together, we can transform the future of
        healthcare.
      </p>
      <Spacer />
      <Spacer />
    </div>
    <div class="content">
      <h1>Open Positions</h1>
      <CareerTab
        department="Legal"
        positions={[
          {
            name: "Paralegal",
            link: "paralegal",
          },
        ]}
      />
      <CareerTab
        department="Business Development"
        positions={[
          {
            name: "Manager/Associate Director, Portfolio/Project Management",
            link: "associate-director",
          },
        ]}
        isFirst={"true"}
      />
