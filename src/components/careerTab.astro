---
const { department, positions, isFirst } = Astro.props;
const count = positions.length;
---

<h2>{department}</h2>
{
  positions.map((position) => {
    return (
      <div>
        <a href={"/prinston/careers/" + position.link}>{position.name}</a>
      </div>
    );
  })
}
{positions.length === 0 && <p>No Available Positions At This Time</p>}
<style>
  h2 {
    margin-bottom: 0;
  }
  a {
    font-size: 20px;
  }
</style>
