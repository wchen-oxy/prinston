    max-width: calc(100% - 40px);
    margin: auto;
  }

  #info-location-title {
    font-weight: 400;
    font-size: 24px;
    color: white;
    margin-bottom: 0;
  }

  .info-contact-info {
    display: flex;
    justify-content: space-between;
  }
  .info-contact-info2 {
    display: none;
  }

  a {
    text-decoration: none;
    color: #8e8db6;
  }

  #credit {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #8e8db6;
    margin-top: 50px;
    margin-bottom: 1em;
  }
  .footer-column {
    display: flex;
  }

  @media screen and (max-width: 872px) {
    .info-contact-info {
      display: flex;
      flex-direction: column;
    }
    .info-contact-info2 {
      display: none;
    }
    #left-column {
