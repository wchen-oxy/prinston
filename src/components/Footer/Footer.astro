    address: "700 Atrium Dr,\n Suite B, \nSomerset, NJ 08873",
    phone: "(609) 655-1688",
    email: "contact@prinstonpharm.com",
    website: "www.prinstonpharm.com",
    url: "https://www.prinstonpharm.com",
  },
  {
    location: "Prinston Labs - Manufacturing",
    address: "3241 Woodpark Boulevard,\n Charlotte,\n NC 28206",
    phone: "(609) 655-1688",
    email: "customerservice@solcohealthcare.com",
  },
  {
    location: "Solco - Distribution Lab and Manufacturing",
    address: "700 Atrium Dr,\n Suite A,\n Somerset, NJ 08873",
    phone: "(855) 581-9688",
    email: "customerservice@solcohealthcare.com",
    website: "www.solcohealthcare.com",
    url: "https://www.solcohealthcare.com",
  },
  {
    location: "Huahai U.S. Inc.",
    address: "700 Atrium Dr,\n Suite C,\n Somerset, NJ 08873",
    phone: "(609) 664-2220",
    email: "effie_luo@huahaipharm.com",
    website: "www.en.huahaipharm.com/index.aspx",
