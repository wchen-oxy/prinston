---

<div id="footer">
  <div id="footer-content">
    <div id="footer-hero">
      <div id="logo-column" class="footer-column">
        <img id="footer-logo" src={"/prinston/logo.png"} alt="logo" />
      </div>
      <div id="right-column">
        <div id="left-column" class="footer-column">
          <h3 class="category-titles">Our Locations</h3>
          <div class="info-contact-info">
            {
              address.map(
                ({ location, address, phone, email, website, url }) => (
                  <Contact
                    location={location}
                    address={address}
                    phone={phone}
                    email={email}
                    website={website}
                    url={url}
                  />
                )
              )
            }
          </div>
          <div class="info-contact-info2">
            {
              address
                .slice(0, 2)
                .map(({ location, address, phone, email, website, url }) => (
                  <Contact
                    location={location}
                    address={address}
                    phone={phone}
                    email={email}
                    website={website}
                    url={url}
                  />
                ))
            }
          </div>
          <div class="info-contact-info2">
            {
              address
                .slice(2, 4)
                .map(({ location, address, phone, email, website, url }) => (
                  <Contact
                    location={location}
                    address={address}
                    phone={phone}
                    email={email}
                    website={website}
                    url={url}
                  />
                ))
            }
          </div>
        </div>
        <div id="social-links">
          <h3 class="category-titles">Follow Us</h3>
          <div id="media-container">
            <a
              href="https://www.linkedin.com/company/prinston-pharmaceutical-inc-/"
              target="_blank"
            >
              <img
                class="social-media-icons"
                src="/prinston/linkedin-i.png"
                alt="Icon"
              />
            </a>
            <a href="https://x.com/PrinstonPharm" target="_blank">
              <img
                class="social-media-icons"
                src="/prinston/twitter-i.png"
                alt="Icon"
              />
            </a>
          </div>
        </div>
      </div>
    </div>
