    .info-contact-info {
      display: flex;
      flex-direction: column;
    }
    .info-contact-info2 {
      display: none;
    }
  }

  @media screen and (max-width: 1200px) and (min-width: 750px) {
    .info-contact-info {
      display: none;
    }
    .info-contact-info2 {
      display: flex;
