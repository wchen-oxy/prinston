---

<div id="footer">
  <div id="left-column" class="footer-column">
    <h3 id="info-location-title">Our Contact Info</h3>
    <div class="info-contact-info">
      {
        address.map(({ location, address, phone, email }) => (
          <Contact
            location={location}
            address={address}
            phone={phone}
            email={email}
          />
        ))
      }
    </div>
    <div class="info-contact-info2">
      {
        address
          .slice(0, 2)
          .map(({ location, address, phone, email }) => (
            <Contact
              location={location}
              address={address}
              phone={phone}
              email={email}
            />
          ))
      }
    </div>
    <div class="info-contact-info2">
      {
        address
          .slice(2, 4)
          .map(({ location, address, phone, email }) => (
            <Contact
              location={location}
              address={address}
              phone={phone}
              email={email}
            />
          ))
      }
    </div>
