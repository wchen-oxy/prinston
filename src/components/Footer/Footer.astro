    phone: "(609) 655-1688",
    email: "contact@prinstonpharm.com",
    website: "www.prinstonpharm.com",
    url: "https://www.prinstonpharm.com",
  },
  {
    location: "Prinston Labs - Manufacturing",
    address: "3241 Woodpark Boulevard,\n Charlotte,\n NC 28206",
    phone: "(609) 655-1688",
    email: "customerservice@solcohealthcare.com",
  },
  {
