---
const { title, menuData, type, isLeft } = Astro.props;
const finalClassname = isLeft ? "menu-container-left" : 'menu-container'
---

<div class={finalClassname}>
  <!-- <h3>{title}</h3> -->
  <div class="dropdown-list">
    {menuData.map(({ label, url }) => <a href={url}>{label}</a>)}
  </div>
</div>
<style>
  .menu-container {
    display: block;
    /* flex-direction: column; */
    position: absolute;
    background-color: white;
    padding: 2rem 2rem 2rem 2rem;
    min-width: 25rem;
    /* right: 12rem; */
    margin-top: 3rem;
    z-index: 1;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    box-sizing: border-box;
  }
  .menu-container-left {
    display: block;
    /* flex-direction: column; */
    position: absolute;
    background-color: white;
    padding: 2rem 2rem 2rem 2rem;
    min-width: 25rem;
    margin-left: -210px;
    margin-top: 3rem;
    z-index: 1;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    box-sizing: border-box;
  }


  .dropdown-list {
    display: flex;
    flex-direction: column;
  }
  h3 {
    font-size: 18px;
    color: #36469c;
    margin: 0 0 0.5em 0;
  }
  a {
    display: block;
    width: fit-content;
    text-decoration: none;
    color: inherit;
    margin: 0.5em 0;
    position: relative;
    font-size: 18px;
  }
  a::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 1px;
    bottom: -2px; /* Adjust this value if needed */
    left: 0;
    background-color: rgba(31, 135, 232, 1);
    transform: scaleX(0);
    /* transition: transform 0.3s ease; */
  }

  a:hover::after {
    border-bottom: 1px solid rgba(31, 135, 232, 1);
    transform: scaleX(1);
  }
</style>
<script></script>
