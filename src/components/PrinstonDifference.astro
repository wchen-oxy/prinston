---
import SectionMeta from "./SectionMeta.astro";

const heroText: { title: string; desc: string }[] = [
  {
    title: "Quality",
    desc: `We are dedicated to producing high quality generic pharmaceuticals.
     We have an excellent complicance record with zero recorded 483 citations.`,
  },
  {
    title: "Affordability",
    desc: `By leveraging our R&D and the capabilities of local and abroad facilities, 
          we are able to manufacture a large variety of generic pharmaceuticals at affordable prices.`,
  },
  {
    title: "Reliability",
    desc: `Our American manufacturing facility has conducted 100% on-time stability tests since its founding. 
           To do so, we utilize multiple systems to manage complicance and reliability. `,
  },
];
---

<div id="prinston-difference">
  <div id="content-upper">
    <SectionMeta
      section="The Prinston Difference"
      title="Quality, Affordability and Reliability"
      subHeader=" We're able to leverage our local and international facilities to manufacture affordable and high quality generics at any scale."
    />
    <h3></h3>
  </div>
  <div id="content-lower">
    <div id="content-text">
      {
        heroText.map(({ title, desc }) => (
          <div class="content-text-container">
            <p class="content-title">{title}</p>
            <p class="content-description">{desc}</p>
          </div>
        ))
      }
    </div>
    <div id="content-image">
      <img src="/prinston/lab.jpg" />
    </div>
  </div>
</div>

<style>
  h1 {
    color: #36469c;
    font-size: 16px;
    margin: 0;
  }
  h2 {
    font-size: 32px;
    font-weight: 400;
    margin: 0px;
  }
  h3 {
    margin: 0px;
    line-height: 1;
    font-weight: 100;
    font-size: 24px;
  }
  p {
    font-size: 20px;
    margin: 0;
  }

  img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: right;
  }

  #prinston-difference {
    margin: auto;
  }
  #content-upper {
    /* margin-top: 40px; */
    margin-bottom: 80px;
  }

  #content-lower {
    display: flex;
    height: 500px;
  }

  #content-image {
    width: 55%;
    padding-left: 1rem;
  }

  #content-text {
    display: flex;
    flex-direction: column;
    width: 45%;
  }

  .content-text-container {
    display: flex;
    flex-direction: column;
    margin: 0 0 auto 0;
  }

  .content-title {
    line-height: 1;
    font-weight: bold;
  }

  @media screen and (max-width: 901px) {
    #content-upper {
      margin-bottom: 0px;
    }
    #content-lower {
      height: auto;
      display: flex;
      flex-direction: column-reverse;
    }
    #content-text {
      width: 100%;
      margin-top: 2em;
    }
    #content-image {
      padding-left: 0;
      width: 100%;
    }
    .content-text-container {
      margin: 0.5rem 0;
    }
  }
</style>
