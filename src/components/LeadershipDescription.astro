---
const { title, name, description, imageURL } = Astro.props;
---

<div class="leadership-main">
  <div class="leadership-identifying-column">
    <div class="image-container">
      <img src={imageURL} />
      <div>
        <h1>
          {title}
        </h1>
        <h3>
          {name}
        </h3>
      </div>
      <div class="name-title"></div>
    </div>
  </div>
  <div class="offset-column"></div>
  <div class="leadership-description">
    <pre>
    {description}
</pre>
  </div>
  <style>
    h1 {
      font-weight: 400;
      margin: 1em 0 0 0;
    }
    h3 {
      font-weight: 100;
      margin: 0;
    }
    pre {
      font-family: inherit;
      font-size: 18px;
    }
    img {
      width: 100%;
      min-height: 100%;
      object-fit: cover;
    }
    .image-container {
      width: 100%;
    }
    .name-title {
    }
    .leadership-identifying-column {
      width: 42%;
      min-width: 40%;
    }

    .offset-column {
      width: 6%;
      min-width: 10%;
    }
    .leadership-description-column {
      width: 52%;
    }
    .leadership-main {
      display: flex;
      flex-direction: row;
    }
  </style>
</div>
