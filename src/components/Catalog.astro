---
import Button from "./Button.astro";
import SectionMeta from "./SectionMeta.astro";
---

<div id="catalog">
  <div id="content-image">
    <img src="/prinston/medicine.jpg" />
  </div>
  <div id="content-text">
    <div class="content-text-container">
      <SectionMeta
        section="Our Product Catalog"
        title="Unmatched Generics Product Availability"
      />
      <p id="content-description">
        We specialize in difficult to make sterile and non-sterile forms. We
        offer a broad range of generic prescriptions including but not limited
        to cardiovascular, central nervous system and pain management products.
      </p>
      <Button color="#36469c" text="Learn More" url="/prinston/products" />
    </div>
  </div>
</div>
<style>
  img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: right;
  }

  #catalog {
    display: flex;
    height: 500px;
    }

  #content-image {
    /* padding: 1rem; */
    width: 60%;
  }

  #content-text {
    padding: 0 0 1rem 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 40%;
    height: 100%;
  }

  #content-description {
    margin-top: 24px;
    margin-bottom: 48px;
  }

  p {
    font-size: 20px;
    margin: 0;
  }

  @media screen and (max-width: 900px) {
    #catalog {
      height: auto;
      flex-direction: column;
    }
    #content-image {
      width: auto;
      padding: 0;
    }
    #content-text {
      width: 100%;
      padding: 0;
      margin-top: 1em;
    }
  }
</style>

