---
import Button from "./Button.astro";
---

<div id="hero-image-container">
  <div id="hero-column-container">
    <div class="hero-columns">
      <h2>The Community's Partner in Affordable Generics</h2>
      <h4>
        Providing high quality, accessible generic pharmaceuticals for decades.
      </h4>
      <div id="button-column">
        <Button text="Learn More" url="/prinston/about" color="white" />
      </div>
    </div>
    <div class="hero-columns" id="empty-columns"></div>
  </div>
</div>

<style>
  #hero-image-container {
    width: 100%;
    height: 70vh;
    background-image: linear-gradient(
        125deg,
        rgba(107, 19, 17, 0.8),
        rgba(8, 83, 156, 0.4)
      ),
      url("/prinston/generic.jpg");
    background-repeat: no-repeat;
    /* background-attachment: fixed; */
    background-position: 50%;
    background-size: cover;
  }
  #hero-column-container {
    display: flex;
    align-items: center;
    margin: auto;
    box-sizing: border-box;
    height: 100%;
    width: 100%;
    max-width: calc(100% - 40px);
  }

  #hero-image {
    width: 100%;
    height: 70vh;
    object-fit: cover;
  }

  .hero-columns {
    /* height: 70vh; */
    /* padding: 4rem; */
    width: 50%;
    /* background: green; */
    position: absolute;
  }
  #button-column {
    /* padding-left: 6.5rem; */
  }

  #empty-columns {
    display: none;
  }

  h2 {
    font-size: 64px;
    font-weight: 300;
    color: white;
    line-height: 1;
    margin: 0;
  }
  h4 {
    color: white;
    font-size: 24px;
    font-weight: 100;
  }

  /* @media screen and(max-width: 452px) and (min-width: 726px) {
    .hero-columns {
      width: 75%;
      h4 {
        color: red;
      }
    }
  } */

  @media (min-width: 48rem) {
    #hero-column-container {
      max-width: calc(100% - 64px);
    }
  }

  @media (min-width: 64rem) {
    #hero-column-container {
      max-width: calc(100% - 128px);
    }
  }

  @media (min-width: 90rem) {
    #hero-column-container {
      max-width: calc(100% - 192px);
    }
  }

  @media (min-width: 104rem) {
    #hero-column-container {
      max-width: 1552px;
    }

    .hero-columns {
      width: 40%;
    }
  }

  @media screen and (max-width: 1200px) and (min-width: 891px) {
    .hero-columns {
      /* color: aliceblue; */
      h2 {
        font-size: 42px;
      }
      h4 {
      }
    }
    #button-column {
    }

    #empty-columns {
      display: none;
    }
  }

  @media screen and (max-width: 890px) and (min-width: 681px) {
    .hero-columns {
    }
    #button-column {
    }

    #empty-columns {
      display: none;
    }
    h2 {
      font-size: 42px;
    }
    h4 {
    }
  }

  @media screen and (max-width: 680px) and (min-width: 521px) {
    .hero-columns {
    }
    #button-column {
    }

    #empty-columns {
      display: none;
    }

    h2 {
      font-size: 42px;
    }
    h4 {
      font-size: 20px;
    }
  }

  @media screen and (max-width: 520px) {
    #hero-column-container {
      max-width: calc(100% - 40px);
      margin: 0px;
    }
    #hero-image-container {
      height: 60vh;
      background-position: 80%;
    }
    .hero-columns {
      display: flex;
      flex-direction: column;
      justify-content: center;
      width: 100%;
      padding: 0;
    }

    #button {
      /* margin: 1em; */
      padding: 0;
    }
    #button-column {
      padding: 0 1rem;
      margin: 0 auto;
    }

    #empty-columns {
      display: none;
    }

    h2 {
      font-size: 36px;
      padding: 0 1rem;
      text-align: center;
    }

    h4 {
      margin: 1em;
      padding: 0;
      font-size: 20px;
      text-align: center;
    }
  }
</style>
