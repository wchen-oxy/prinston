---
import Button from "./Button.astro";
const navLinks: { label: string; ref: string }[] = [
  { label: "The Prinston Difference", ref: "refDiff" },
  { label: "Product Catalog", ref: "refProducts" },
  { label: "News", ref: "refNews" },
  { label: "Open Positions", ref: "refPositions" },
];
---

<div id="hero">
  <div id="hero-image-container">
    <div class="hero-columns">
      <h2>The Community's Partner in Affordable Generics</h2>
      <h4>
        Providing high quality, accessible generic pharmaceuticals for decades.
      </h4>
      <div id="button-column">
        <Button text="Learn More" url="/prinston/about" color="white" />
      </div>
    </div>
    <div class="hero-columns" id="empty-columns"></div>
  </div>
  <div id="navigation">
    {
      navLinks.map(({ label, ref }) => (
        <button id={ref} class="navigation-buttons">
          {label}
        </button>
      ))
    }
  </div>
</div>

<style>
  #hero {
    width: 100%;
  }
  #hero-image-container {
    width: 100%;
    height: 70vh;
    background-image: linear-gradient(
        125deg,
        rgba(107, 19, 17, 0.75),
        rgba(8, 83, 156, 0.75)
      ),
      url("/prinston/generic.jpg");
    background-repeat: no-repeat;
    /* background-attachment: fixed; */
    background-position: 50%;
    background-size: cover;
    display: flex;
    align-items: center;
    /* flex-basis: 100%; */
    box-sizing: border-box;
  }

  #hero-image {
    width: 100%;
    height: 70vh;
    object-fit: cover;
  }

  #navigation {
    display: flex;
    justify-content: center;
    position: relative;
  }

  .navigation-buttons {
    background-color: transparent;
    color: rgb(37, 37, 37);
    border: 1px solid rgba(31, 30, 30, 0.5); /* Change the color as needed */
    padding: 0.5rem; /* Adjust padding as desired */
    cursor: pointer;
    font-size: 18px;
    width: 100%;
    max-width: 250px;
  }
  .hero-columns {
    /* height: 70vh; */
    /* padding: 4rem; */
    width: 50%;
    /* background: green; */
    position: absolute;
    h2 {
      font-size: 64px;
      font-weight: 300;
      color: white;
      line-height: 1;
      padding-left: 6rem;
    }
    h4 {
      color: white;
      font-size: 18px;
      font-weight: 100;
      padding-left: 6rem;
    }
  }
  #button-column {
    padding-left: 6rem;
  }

  #empty-columns {
    display: none;
  }

  /* @media screen and(max-width: 452px) and (min-width: 726px) {
    .hero-columns {
      width: 75%;
      h4 {
        color: red;
      }
    }
  } */

  @media screen and (max-width: 1200px) and (min-width: 891px) {
    .hero-columns {
      width: 70%;
      color: aliceblue;
      h2 {
        font-size: 64px;
        padding: 0 3rem;
      }
      h4 {
        padding: 0 3rem;
      }
    }
    #button-column {
      padding: 0 3rem;
    }

    #empty-columns {
      display: none;
    }
  }

  @media screen and (max-width: 890px) and (min-width: 681px) {
    .hero-columns {
      width: 100%;
      color: aliceblue;
      h2 {
        font-size: 42px;
        padding: 0 1rem;
      }
      h4 {
        padding: 0 1rem;
      }
    }
    #button-column {
      padding: 0 1rem;
    }

    #empty-columns {
      display: none;
    }
  }

  @media screen and (max-width: 680px) and (min-width: 521px) {
    .hero-columns {
      width: 70%;
      color: aliceblue;
      h2 {
        font-size: 42px;
        padding: 0 1rem;
      }
      h4 {
        padding: 0 1rem;
      }
    }
    #button-column {
      padding: 0 1rem;
    }

    #empty-columns {
      display: none;
    }
  }

  @media screen and (max-width: 520px) {
    #hero-image-container {
      height: 50vh;
    }
    .hero-columns {
      display: flex;
      flex-direction: column;
      justify-content: center;
      width: 100%;
      padding: 0;
      h2 {
        font-size: 36px;
        margin: 0.5em;
        padding: 0;
      }
      h4 {
        margin: 1em;
        padding: 0;
      }
    }

    #button {
      /* margin: 1em; */
      padding: 0;
    }
    #button-column {
      padding: 0 1rem;
    }

    #empty-columns {
      display: none;
    }
  }
</style>

<script>
  const differences = document.getElementById("refDiff");
  const products = document.getElementById("refProducts");
  const news = document.getElementById("refNews");
  const position = document.getElementById("refPositions");
  const buttons = [differences, products, news, position];
  buttons.map((button) => {
    button.addEventListener("click", (e) => {
      switch (e.target.id) {
        case "refDiff":
          document.getElementById("prinston-difference").scrollIntoView();
          break;
        case "refProducts":
          document.getElementById("catalog").scrollIntoView();
          break;
        case "refNews":
          document.getElementById("news").scrollIntoView();
          break;
        case "refPositions":
          document.getElementById("careers").scrollIntoView();
          break;
      }
    });
  });
</script>
