---
const { url, section, title, subHeader } = Astro.props;
---

<div id="background">
  <div id="page-header">
    <!-- <img src={url} /> -->
    <div id="header-content">
      <h1>{section}</h1>
      <h2>{title}</h2>
      {subHeader && <h5>{subHeader}</h5>}
    </div>
  </div>
</div>
<style>
  #page-header {
    /* height: 200px; */
    width: 100%;
    background: linear-gradient(
        270deg,
        rgb(255, 255, 255),
        rgba(191, 221, 255, 0.05),
        rgba(180, 215, 255, 0)
      ),
      linear-gradient(
        345deg,
        rgb(255, 255, 255),
        rgba(191, 221, 255, 0.1),
        rgba(25, 0, 255, 0.17)
      ),
      linear-gradient(
        200deg,
        rgb(255, 255, 255),
        rgba(191, 221, 255, 0.2),
        rgba(255, 0, 0, 0.2)
      );
  }
  #background {
    /* background-color: rgba(178, 214, 255, 0.349); */
    /* background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23dce9ff' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E"); */
    max-width: 100vw;
  }
  #header-content {
    /* max-width: 1600px; */
    width: 100%;
    margin: auto;
    padding: 5rem 0;
    box-sizing: border-box;
  }
  h1 {
    font-size: 18px;
    font-weight: 400;
    color: rgba(37, 37, 37, 0.75);
    margin: 0;
  }
  h2 {
    font-size: 64px;
    width: fit-content;
    color: rgb(0, 0, 0);
    font-weight: 100;
    margin: 16px 0;
  }
  h5 {
    font-size: 28px;
    font-weight: 100;
    margin: 0em 0 0 0;
    color: rgb(0, 0, 0);
  }

  @media screen and (max-width: 890px) {
    h1 {
      font-size: 14px;
    }
    h2 {
      font-size: 36px;
    }
    h5 {
      font-size: 18px;
    }

    #header-content {
      padding: 3em 1rem;
    }
  }

  @media screen and (max-width: 1200px) and (min-width: 891px) {
    h2 {
      font-size: 48px;
    }
    h5 {
      font-size: 24px;
    }

    #header-content {
      padding: 3em 1rem;
    }
  }

  @media (min-width: 48rem) {
    #header-content {
      max-width: calc(100% - 64px);
    }
  }

  @media (min-width: 64rem) {
    #header-content {
      max-width: calc(100% - 128px);
    }
  }

  @media (min-width: 90rem) {
    #header-content {
      max-width: calc(100% - 192px);
    }
  }

  @media (min-width: 104rem) {
    #header-content {
      max-width: 1552px;
    }

    .hero-columns {
      width: 40%;
    }
  }
</style>
